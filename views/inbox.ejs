                            class="lucide lucide-x">
                            <path d="M18 6 6 18" />
                            <path d="m6 6 12 12" />
                        </svg>
                    </div>
                </div>

                <!-- Search -->

                <div class="mb-4">
                    <input type="text" placeholder="Search"
                        class="w-full p-2 rounded-lg bg-gray-700 text-gray-200 placeholder-gray-400 focus:ring-2 focus:ring-indigo-500" />
                </div>
                <!-- Conversation List -->
                <div class="space-y-4">
                    <div class="flex items-center space-x-4 p-4 rounded-lg bg-gray-700 hover:bg-gray-600 transition">
                        <div
                            class="border border-black/10 flex justify-center items-center bg-white/10 rounded-full w-10 h-10">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
