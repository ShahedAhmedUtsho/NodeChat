    <body class="bg-[#121212] text-gray-200 min-h-screen flex flex-col">


        <!-- Chat Container -->
        <div class="flex flex-1 ">

            <!-- Conversations List -->
            <div class="w-1/4 bg-[#262730]  p-4 space-y-4">
                <!-- close  -->

                <div class="flex  justify-end items-center">
